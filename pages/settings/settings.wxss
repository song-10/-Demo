/* pages/settings/settings.wxss */
.header{
    display: flex;
    justify-content: center;
}
.head{
  border-radius: 50%;
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
}
.nick{
  display: flex;
  justify-content: center;
  padding:10rpx 0rpx 10rpx 0rpx;
}
.button{
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 30%;
  line-height:70rpx;
  display: flex;
  justify-content: center;
  text-align: center;
  font-size: 16px;
}
.line{
  border: 1rpx solid #f6f8f8;
  margin-top: 10rpx;
  margin-bottom: 5rpx;
}
.main{
  /* background-color: red; */
  border:2rpx solid #f6f8f8;
 
}
.title{
  color: #c0c0bf;
  font-size: 16px;
  padding-left: 20rpx;
}
.choice{
  padding:20rpx 30rpx 20rpx 30rpx;
}
.logo{
  padding-top: 50rpx;
  box-shadow:10px 5px 10px rgba(0,0,0,0.2);
}
.a_content{
  margin: 10rpx;
}
.a_state,.a_detail{
  font-size: 14px;
  color: #c0c0bf;
  padding-left: 20rpx;
  padding-bottom: 5rpx;
}
.a_editor{
  padding-top: 10rpx;
  padding-right: 5rpx;
  font-size: 12px;
  color: #c0c0bf;
  display: flex;
  justify-content: flex-end;
}
.l_content text{
  padding-top: 10rpx;
  color: #c0c0bf;
  display: flex;
  justify-content: center;
  font-size: 14px;
}
.f_content{
  padding-top: 10rpx;
  color: #c0c0bf;
  display: flex;
  justify-content: center;
  font-size: 14px;
}